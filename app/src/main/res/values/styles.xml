<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="actionModeBackground">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="TextViewTitle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/textSizeListTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTitle</item>
    </style>

    <style name="ButtonRoundedAccent" parent="Button">
        <item name="android:background">@drawable/ripple_accent_rounded</item>
    </style>

    <style name="Button" parent="android:Widget.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/ripple_accent</item>
    </style>

    <style name="MyThemeEditWithHint" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorHint</item>
        <item name="colorControlHighlight">@color/colorHint</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorHint</item>
    </style>

    <style name="BaseTextInputLayout" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorHintActive</item>
        <item name="colorControlNormal">@color/colorHintActive</item>
        <item name="colorControlActivated">@color/colorHintActive</item>
    </style>

    <style name="TextInputLayoutSuccess" parent="BaseTextInputLayout">
        <item name="colorControlNormal">@color/colorHintSuccess</item>

    </style>

    <style name="BaseTextInputLayoutError" parent="BaseTextInputLayout">
        <item name="colorControlNormal">@color/colorHintError</item>
    </style>

    <style name="TextViewHint">
        <item name="android:textColor">@color/colorHint</item>
    </style>

    <style name="ProgressBar" parent="TextViewHint">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button.Borderless" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>


</resources>
