<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:paddingTop="@dimen/margin_default">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilCell"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColorHint="@color/colorHint"
        android:layout_marginStart="2.6dp"
        >
        <EditText
            android:id="@+id/etCell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:hint="Nome completo"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:maxLines="1"
            style="@style/BaseEditText"
            />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="@dimen/sizeButtonCLose"
        android:layout_height="@dimen/sizeButtonCLose"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tilCell"
        app:layout_constraintBottom_toBottomOf="@+id/tilCell"
        android:src="@drawable/iv_vt_close"
        android:background="@drawable/circle_gray"
        android:padding="6dp"
        />
</android.support.constraint.ConstraintLayout>