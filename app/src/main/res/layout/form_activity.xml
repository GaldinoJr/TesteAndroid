<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".plataform.views.home.HomeActivity">

    <FrameLayout
        android:id="@+id/flRoot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btInvestment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/btInvestment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btContact"
        android:text="@string/investment"
        style="@style/Button"
        android:visibility="invisible"

        />

    <Button
        android:id="@+id/btContact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btInvestment"
        android:text="@string/contact"
        style="@style/Button"
        android:visibility="invisible"
        tools:visibility="visible"
        />

    <Button
        android:id="@+id/btInvestmentPressed"
        android:layout_width="0dp"
        android:layout_height="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btContactPressed"
        android:text="@string/investment"
        style="@style/Button"
        android:background="@color/colorAccentDark"
        android:visibility="invisible"
        tools:visibility="visible"
        />

    <Button
        android:visibility="invisible"
        android:id="@+id/btContactPressed"
        android:layout_width="0dp"
        android:layout_height="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btInvestmentPressed"
        android:text="@string/contact"
        style="@style/Button"
        android:background="@color/colorAccentDark"
        />
</android.support.constraint.ConstraintLayout>