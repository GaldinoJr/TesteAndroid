<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".plataform.views.success.SuccessFragment"
    android:background="@color/colorPrimary">

    <View
        android:id="@+id/vKeyLineLeft"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/margin_default8x"
        />

    <View
        android:id="@+id/vKeyLineRight"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/margin_default8x"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/margin_default8x"
        style="@style/TextViewTitle"
        />

    <TextView
        android:id="@+id/tvThanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toTopOf="@+id/tvMessageSentSuccess"
        app:layout_constraintRight_toRightOf="@id/vKeyLineRight"
        app:layout_constraintLeft_toLeftOf="@+id/vKeyLineLeft"
        app:layout_constraintVertical_chainStyle="packed"
        android:text="@string/thanks"
        style="@style/TextViewHint"
        />

    <TextView
        android:id="@+id/tvMessageSentSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvThanks"
        app:layout_constraintBottom_toTopOf="@+id/btSendNewMessage"
        app:layout_constraintRight_toRightOf="@id/vKeyLineRight"
        app:layout_constraintLeft_toLeftOf="@+id/vKeyLineLeft"
        android:text="@string/message_sent_success"
        style="@style/TextViewTitle"
        android:layout_marginTop="@dimen/margin_default2x"
        />

    <Button
        android:id="@+id/btSendNewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/vKeyLineRight"
        app:layout_constraintLeft_toLeftOf="@+id/vKeyLineLeft"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Button.Borderless"
        android:text="@string/send_new_message"
        android:layout_marginBottom="@dimen/margin_default12x"
        />
</android.support.constraint.ConstraintLayout>