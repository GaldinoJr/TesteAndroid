<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".plataform.views.contact.ContactFragment"
    android:background="@color/colorPrimary">

    <View
        android:id="@+id/vKeyLineLeft"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/margin_default8x"
        />

    <View
        android:id="@+id/vKeyLineRight"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/margin_default8x"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/margin_default8x"
        style="@style/TextViewTitle"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvForm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintBottom_toTopOf="@+id/cbRegisterEmail"
        app:layout_constraintLeft_toLeftOf="@+id/vKeyLineLeft"
        app:layout_constraintRight_toRightOf="@+id/vKeyLineRight"
        android:layout_marginTop="@dimen/margin_default4x"
        android:layout_marginBottom="@dimen/margin_default4x"
        />

    <CheckBox
        android:id="@+id/cbRegisterEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/vKeyLineLeft"
        app:layout_constraintRight_toRightOf="@+id/vKeyLineRight"
        app:layout_constraintBottom_toTopOf="@+id/btSend"
        android:layout_marginBottom="@dimen/margin_default10x"
        android:text="@string/i_would_like_to_register_my_email"
        style="@style/TextViewHint"
        />

    <Button
        android:id="@+id/btSend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/vKeyLineLeft"
        app:layout_constraintRight_toRightOf="@+id/vKeyLineRight"
        android:layout_marginBottom="@dimen/margin_default8x"
        style="@style/ButtonRoundedAccent"
        android:text="@string/send" />

</android.support.constraint.ConstraintLayout>