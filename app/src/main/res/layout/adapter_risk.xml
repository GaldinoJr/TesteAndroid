<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/clRisk"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ivArrowDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vt_down_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="invisible"
        tools:visibility="visible"
        />

    <View
        android:id="@+id/vRisk"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/vRiskSelected"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/vMargin"
        tools:background="@color/colorRiskLevel1"
        />

    <View
        android:id="@+id/vRiskSelected"
        android:layout_width="0dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toBottomOf="@+id/ivArrowDown"
        android:layout_marginTop="@dimen/margin_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/vMargin"
        tools:background="@color/colorRiskLevel1"
        android:visibility="invisible"
        />

    <View
        android:id="@+id/vBackgroundMargin"
        android:layout_width="2dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vRisk"
        app:layout_constraintBottom_toBottomOf="@+id/vRisk"
        android:background="@android:color/white"
        />

    <View
        android:id="@+id/vMargin"
        android:layout_width="2dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vRisk"
        app:layout_constraintBottom_toBottomOf="@+id/vRisk"
        android:background="@android:color/white"
        android:alpha="0.6"
        />

</android.support.constraint.ConstraintLayout>